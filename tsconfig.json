{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "outDir": "build",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": "src",
    "typeRoots": [
      "node_modules/@types",
    ],
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "build",
  ],
}
